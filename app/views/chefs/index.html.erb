<%= render '/shared/page-title', title: 'All Chefs'%>

<div align="center">
<span style="display: block;"><%= will_paginate %></span>
	<% @chefs.each do |chef| %>
		<div class="well col-md-4 col-md-offset-4">
			<ul class="listing">
			
				<li class="title-name"><%= link_to chef.name.capitalize , chef_path(chef) %></li>
				<li><small> <%= pluralize(chef.recipes.count, "recipe") if chef.recipes %> </small></li>
				<% if logged_in? && current_chef.admin? && !chef.admin?%>
					<li><%= link_to "Delete this Chef", chef_path(chef), method: :delete,
						data: {confirm: "Are you sure you want to delete?"} %></li>
				<%end%>
			<ul>
		</div>
	<% end %>
</div>
