<%= render 'shared/errors' ,obj: @ingredient%>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@ingredient, :html => {class: "form-horizontal", role:"form"}) do |new|%>
			<div class="form-group">
				<%= new.label :name%>
				<%= new.text_field :name , class: "form-control" ,placeholder: "Enter name of Ingredient", autofocus: true %>

			</div>
			<div class="form-group">
				<%= new.submit(@ingredient.new_record? ? "Create new Ingredient" : "Update Ingredient" ,class: "btn btn-primary btn-xlarge")%>
			</div>

		<% end %>

		<div class="col-md-4 col-md-offset-4 colormatch">
		[<%= link_to "Cancel and go back", recipes_path %>]
		</div>
	</div>
</div>
<hr/>